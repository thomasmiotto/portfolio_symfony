{# templates/base.html.twig #}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Mon Portfolio{% endblock %}</title>
</head>
<body>
    <header>
        <h1>Mon Portfolio</h1>
        <nav>
            <ul>
                <li><a href="{{ path('app_login') }}">Connexion</a></li>
                <li><a href="{{ path('app_register') }}">Inscription</a></li>
                {# Vous pouvez ajouter d'autres liens de navigation ici #}
            </ul>
        </nav>
    </header>

    <div>
        {% block body %}{% endblock %}
    </div>

    <footer>
        <p>© {{ "now"|date("Y") }} Mon Portfolio. Tous droits réservés.</p>
    </footer>
</body>
</html>
